<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="screenBackgroundColor" format="color" />
    <attr name="elementTextColor" format="color" />
    <attr name="dividerColor" format="color" />
    <attr name="cardUnSelectedColor" format="color" />
    <attr name="cardSelectedColor" format="color" />
    <attr name="sliderColor" format="color" />
    <attr name="sliderBgColor" format="color" />
    <attr name="loaderColor" format="color" />

    <style name="LightTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="screenBackgroundColor">@color/white</item>
        <item name="elementTextColor">@color/black</item>
        <item name="dividerColor">@color/gray_50</item>
        <item name="cardUnSelectedColor">@color/black_50</item>
        <item name="cardSelectedColor">@color/black</item>
        <item name="sliderColor">@color/black</item>
        <item name="sliderBgColor">@color/white_50</item>
        <item name="loaderColor">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="screenBackgroundColor">@color/black</item>
        <item name="elementTextColor">@color/white</item>
        <item name="dividerColor">@color/gray_50</item>
        <item name="cardUnSelectedColor">@color/white_50</item>
        <item name="cardSelectedColor">@color/white</item>
        <item name="sliderColor">@color/white</item>
        <item name="sliderBgColor">@color/black_50</item>
        <item name="loaderColor">@color/white</item>
    </style>
</resources>